<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NextActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/set_edittext"
            android:hint="Age"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Set"
            android:id="@+id/set_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/update_edittext"
            android:hint="Gender"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Update"
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/read_single_textview"
            android:hint="Text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:text="read single"
            android:id="@+id/read_single_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/read_observe_textview"
            android:hint="Text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:text="read observe"
            android:id="@+id/read_observe_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/query_single_textview"
            android:hint="Text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/query_single_edittext"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <Button
            android:text="query single"
            android:id="@+id/query_single_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/query_observe_textview"
            android:hint="Text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/query_observe_edittext"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <Button
            android:text="query observe"
            android:id="@+id/query_observe_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/delete_button"
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Logout"
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>